#!/bin/bash -l
#SBATCH --export=ALL
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --wait
#SBATCH --chdir=$ECRad_DRIVER_DIR

export OMP_NUM_THREADS=${SLURM_CPUS_PER_TASK:-1}

# For pinning threads correctly:
export OMP_PLACES=cores 
echo $ECRad_DRIVER_DIR
srun python ECRad_Driver.py $ECRad_WORKING_DIR